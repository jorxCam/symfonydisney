{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

<div class="div_form_register">
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <h1>Register</h1>
    <div>
        {{ form_start(registrationForm) }}
            {# {{ form_row(registrationForm.name, {'attr': {'class': 'my-field-class'    }}   )  }} #}
            {{ form_row(registrationForm.email,{'attr': {'class': 'form-control-register'}}   )  }}
            {{ form_row(registrationForm.plainPassword,{'attr': {'class': 'form-control-register'}}, {      label: 'Password'   } )  }}
            {{ form_row(registrationForm.agreeTerms) }}

            <button type="submit" class="bouton-disney-inscription">Register</button>
        {{ form_end(registrationForm) }}
    </div>
</div>    
{% endblock %}
